<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_navigation"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vaca.chatmygirl.fragment.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.vaca.chatmygirl.fragment.WelcomeFragment"
        android:label="WelcomeFragment">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.vaca.chatmygirl.fragment.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.vaca.chatmygirl.fragment.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.vaca.chatmygirl.chatfragment.ChatFragment"
        android:label="ChatFragment" >
        <action
            android:id="@+id/action_chatFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
        <action
            android:id="@+id/action_chatFragment_to_videoDetailFragment"
            app:destination="@id/videoDetailFragment" />
        <action
            android:id="@+id/action_chatFragment_to_fileDetailFragment"
            app:destination="@id/fileDetailFragment" />
        <action
            android:id="@+id/action_chatFragment_to_textDetailFragment"
            app:destination="@id/textDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.vaca.chatmygirl.chatfragment.ImageDetailFragment"
        android:label="ImageDetailFragment" />
    <fragment
        android:id="@+id/videoDetailFragment"
        android:name="com.vaca.chatmygirl.chatfragment.VideoDetailFragment"
        android:label="VideoDetailFragment" />
    <fragment
        android:id="@+id/fileDetailFragment"
        android:name="com.vaca.chatmygirl.chatfragment.FileDetailFragment"
        android:label="FileDetailFragment" />
    <fragment
        android:id="@+id/textDetailFragment"
        android:name="com.vaca.chatmygirl.chatfragment.TextDetailFragment"
        android:label="TextDetailFragment" />
</navigation>