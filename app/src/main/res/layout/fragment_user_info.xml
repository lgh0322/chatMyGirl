<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/login_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:focusable="true"

        android:padding="20dp"
        android:src="@drawable/pr_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="添加成员"
        android:textColor="@color/login_black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/login_back"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:id="@+id/save_text"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/logout_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/get_pin_gray"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b1"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />


                <EditText
                    android:id="@+id/nick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="输入姓名"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/login_black"
                    android:textColorHint="@color/get_pin_gray"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebedf0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b2"
                    android:gravity="center"
                    android:text="称呼"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />


                <EditText
                    android:id="@+id/nick2"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入称呼(如爸爸、妈妈等)"
                    android:padding="10dp"
                    android:textColor="@color/login_black"
                    android:textColorHint="@color/get_pin_gray"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebedf0" />

            <RelativeLayout
                android:id="@+id/sexClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b3"
                    android:gravity="center"
                    android:text="性别"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />


                <LinearLayout


                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sexString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择性别"
                        android:textColor="@color/get_pin_gray"
                        android:textSize="30sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/login_right" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebedf0" />

            <RelativeLayout
                android:id="@+id/dateClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b4"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择年龄"
                        android:textColor="@color/get_pin_gray"
                        android:textSize="30sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/login_right" />
                </LinearLayout>
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebedf0" />

            <RelativeLayout
                android:id="@+id/heightClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b5"
                    android:gravity="center"
                    android:text="身高"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/heightString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择身高"
                        android:textColor="@color/get_pin_gray"
                        android:textSize="30sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/login_right" />
                </LinearLayout>
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebedf0" />

            <RelativeLayout
                android:id="@+id/weightClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/b6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/b6"
                    android:gravity="center"
                    android:text="体重"
                    android:textColor="@color/login_black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weightString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择体重"
                        android:textColor="@color/get_pin_gray"
                        android:textSize="30sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/login_right" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>