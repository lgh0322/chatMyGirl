<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <com.vaca.chatmygirl.view.CustomSwipeLayout
        android:id="@+id/bp_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/be_bp_list_menu"
            android:layout_width="300dp"
            android:layout_height="match_parent"
           >

            <TextView
                android:layout_weight="1"
                android:id="@+id/btn_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#c8c7c7"
                android:gravity="center"
                android:text="置顶"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#e94637"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="26sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_item"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.vaca.chatmygirl.view.CircleImageView
                android:id="@+id/item_iv_avatar"
                android:src="@drawable/banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp" />


            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/red_text"
                android:layout_width="wrap_content"
                android:minWidth="30dp"
                android:minHeight="30dp"

                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"

                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_red_drawable"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                app:layout_constraintStart_toEndOf="@+id/item_iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="流口水的JFK"
                android:textColor="@color/login_black"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintStart_toEndOf="@+id/item_iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:text="流口水的JFK"
                android:textColor="@color/login_hint_black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:text="流口水的JFK"
                android:textColor="@color/login_hint_black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.vaca.chatmygirl.view.CustomSwipeLayout>

</LinearLayout>