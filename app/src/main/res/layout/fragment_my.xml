<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#f0f0f0" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_my_top"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.vaca.chatmygirl.view.CircleImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/iv_head"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner" />


            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="200dp"
                android:text=""
                android:textColor="#1289FF"
                android:textSize="40sp" />

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginStart="200dp"
                android:text="火星号： "
                android:textColor="#666666"
                android:textSize="30sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="400dp">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/change_info"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="@dimen/height_my"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="个人资料"
                    android:textColor="#222222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_roght2" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_my"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="#222222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_roght2" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_setting2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_my"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="权限"
                    android:textColor="#222222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_roght2" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_setting3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="反馈"
                    android:textColor="#222222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_roght2" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_setting4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_my"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="版本信息"
                    android:textColor="#222222"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_arrow_roght2" />
            </RelativeLayout>

            <TextView
                android:elevation="10dp"
                android:id="@+id/bt_logout"
                android:layout_width="273dp"
                android:layout_height="94dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="64dp"
                android:background="@drawable/bg_login_bt"
                android:gravity="center"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="40sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>